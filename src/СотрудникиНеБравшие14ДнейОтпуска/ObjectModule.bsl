	ПараметрыРегистрации.Вставить("Информация", "Сотрудники не бравшие 14 дней отпуска");
	ПараметрыРегистрации.Вставить("БезопасныйРежим", Ложь);
	
	Команды = ТаблицаКоманд();
	ДобавитьКоманду(Команды, "Сотрудники не бравшие 14 дней отпуска", "СотрудникиНеБравшие14ДнейОтпуска", "ОткрытиеФормы", Ложь, "");
	
